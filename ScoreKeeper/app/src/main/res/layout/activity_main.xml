<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        tools:context=".MainActivity">

    <TextView
        android:id="@+id/teamA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:layout_gravity="center_horizontal"
        android:textSize="14sp"
        android:textColor="#E64A19"
        android:textStyle="bold"
        android:text="Geeks United" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

            <TextView
                android:id="@+id/goals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="123dp"
                android:layout_marginRight="45dp"
                android:textColor="#E64A19"
                android:fontFamily="sans-serif-medium"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="Goals" />

            <TextView
                android:id="@+id/cards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="45dp"
                android:layout_marginStart="123dp"
                android:textColor="#E64A19"
                android:fontFamily="sans-serif-medium"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="Cards"    />

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="123dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="10dp"
                android:textColor="#E64A19"
                android:fontFamily="sans-serif-light"
                android:textSize="56sp"
                android:text="0" />

            <TextView
                android:id="@+id/team_a_cards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="45dp"
                android:layout_marginStart="123dp"
                android:textColor="#E64A19"
                android:textSize="56sp"
                android:fontFamily="sans-serif-light"
                android:text="0" />


        </RelativeLayout>
@Override
        <Button
            android:id="@+id/goal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="8dp"
            android:colorButtonNormal="#00E676"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="goal" />

        <Button
            android:id="@+id/yellowCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="8dp"
            android:textColor="#FFFF00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="Yellow Card" />
        <Button
            android:id="@+id/redCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="8dp"
            android:textColor="#D32F2F"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="Red Card" />

    </LinearLayout>


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#607D8B"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/teamB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"
            android:textColor="#00ACC1"
            android:textStyle="bold"
            android:text="St. Nerds" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

            <TextView
                android:id="@+id/goalsB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="123dp"
                android:layout_marginRight="45dp"
                android:textColor="#00ACC1"
                android:fontFamily="sans-serif-medium"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="Goals" />

            <TextView
                android:id="@+id/cardsB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="45dp"
                android:layout_marginStart="123dp"
                android:textColor="#00ACC1"
                android:fontFamily="sans-serif-medium"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="Cards"    />

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="123dp"
                android:layout_marginRight="45dp"
                android:layout_marginTop="10dp"
                android:textColor="#00ACC1"
                android:fontFamily="sans-serif-light"
                android:textSize="56sp"
                android:text="0" />

            <TextView
                android:id="@+id/team_b_cards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="45dp"
                android:layout_marginStart="123dp"
                android:textColor="#00ACC1"
                android:textSize="56sp"
                android:fontFamily="sans-serif-light"
                android:text="0" />


        </RelativeLayout>
        @Override
        <Button
            android:id="@+id/goalB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="8dp"
            android:colorButtonNormal="#00E676"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="goal" />

        <Button
            android:id="@+id/yellowCardB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="8dp"
            android:textColor="#FFFF00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="Yellow Card" />
        <Button
            android:id="@+id/redCardB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="8dp"
            android:textColor="#D32F2F"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="Red Card" />

    </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/football"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_above="@+id/reset"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:src="@drawable/football"    />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:text="reset" />

</RelativeLayout>

